<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    tools:context=".Fragments.RusTour.RusTourMasterFragment">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="dk.rus_1_katrinebjerg.barapp.Fragments.RusTour.RusTourInputFragment"
        tools:layout="@layout/fragment_rus_tour_input"
        android:id="@+id/rus_tour_input_fragment"
        android:layout_weight="1"/>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="dk.rus_1_katrinebjerg.barapp.Fragments.RusTour.RusTourListFragment"
        tools:layout="@layout/fragment_rus_tour_list"
        android:layout_toEndOf="@+id/rus_tour_input_fragment"
        android:id="@+id/rus_tour_list_fragment"
        android:layout_weight="1"/>
</LinearLayout>
