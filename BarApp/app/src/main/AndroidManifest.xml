<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dk.rus_1_katrinebjerg.barapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcherlogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="landscape">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.EndRusturActivity" />
        <activity android:name=".Activities.BuyActivity" />
        <activity android:name=".Activities.ToolbarActivity" />
        <activity android:name=".Activities.CreateRusTourActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Activities.CreateDrinkActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Activities.CreateTutorActivity"
            android:windowSoftInputMode="adjustPan" />
    </application>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>